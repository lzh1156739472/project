<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_home_rightleft_suolue"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_toRightOf="@id/iv_home_rightleft_suolue"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:id="@+id/tv_home_rightlft_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="习近平主政这五年，三记重拳管党治党"
            android:textSize="14sp"
            android:layout_alignTop="@id/iv_home_rightleft_suolue"

           />

        <ImageView

            android:src="@drawable/chahao"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_home_rightleft_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_home_rightleft_suolue"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_home_rightleft_suolue"
            android:text="澎湃新闻"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/tv_home_rightleft_comment"
            android:layout_marginLeft="15dp"
            android:textSize="10sp"
            android:layout_alignBottom="@id/tv_home_rightleft_kind"
            android:layout_toRightOf="@id/tv_home_rightleft_kind"
            android:text="73评论"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_home_time"
            android:layout_marginLeft="15dp"
            android:textSize="10sp"
            android:layout_alignBottom="@id/tv_home_rightleft_kind"
            android:layout_toRightOf="@id/tv_home_rightleft_comment"
            android:text="3分钟前"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>