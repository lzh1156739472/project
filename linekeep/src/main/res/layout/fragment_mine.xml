<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    
    <RelativeLayout
        android:background="#47A0CA"
        android:layout_width="match_parent"
        android:layout_height="45dp">
       <TextView
           android:textColor="#FFFFFF"
           android:layout_marginLeft="15dp"
           android:layout_centerVertical="true"
           android:textStyle="bold"
           android:textSize="14sp"
           android:text="档案"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_mine_info"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#F2F2F2">

        <ImageView
            android:id="@+id/iv_mine_touxiang"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/head" />

        <RelativeLayout
            android:id="@+id/ly_mine_buju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_mine_touxiang"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_mine_touxiang">

            <TextView
                android:id="@+id/tv_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="张欣雨"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_huoyueyuedu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_mine_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_mine_name"
                android:text="活跃度+22"
                android:textColor="#FF6600"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_huoyueyuedu"
                android:layout_marginLeft="6dp"

                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/tv_huoyueyuedu"
                android:background="@drawable/redu" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_mine_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ly_mine_buju"
            android:layout_below="@id/ly_mine_buju"
            android:layout_marginTop="25dp"
            android:text="百度AI实验室HR" />


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sanjiaoxing" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mine_lvli"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="#F2F2F2">
<ImageView
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    android:id="@+id/iv_mine_lvli"
    android:src="@drawable/lvli"
    android:layout_width="25dp"
    android:layout_height="25dp" />

<TextView
 android:textSize="16sp"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/iv_mine_lvli"
    android:id="@+id/tv_mine_lvli"
    android:layout_centerVertical="true"
    android:text="我的履历"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_mine_guanzhu"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="#F2F2F2">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_mine_guanzhu"
            android:src="@drawable/guanzhu"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_mine_guanzhu"
            android:id="@+id/tv_mine_guanhzhu"
            android:layout_centerVertical="true"
            android:text="我的关注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_mine_shoucang"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="#F2F2F2">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_mine_shoucang"
            android:src="@drawable/shoucang"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_mine_shoucang"
            android:id="@+id/tv_mine_shoucang"
            android:layout_centerVertical="true"
            android:text="我的收藏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_mine_see"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="#F2F2F2">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_mine_see"
            android:src="@drawable/yanjing"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_mine_see"
            android:id="@+id/tv_mine_see"
            android:layout_centerVertical="true"
            android:text="谁看过我"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_mine_shezhi"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="#F2F2F2">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_mine_shezhi"
            android:src="@drawable/shezhi"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_mine_shezhi"
            android:id="@+id/tv_mine_shezhi"
            android:layout_centerVertical="true"
            android:text="设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>