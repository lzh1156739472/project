<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#D9D9D9" />

        <ImageView
            android:id="@+id/iv_my_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_my_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="刘泽华"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_my_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="LineKeep创始人、vcan....."
            android:textSize="10sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_my_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--<View-->
        <!--android:id="@+id/view_my_beautiful"-->
        <!--android:background="#457DD7"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="1dp"></View>-->
        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:background="#B7B7B7"
            android:layout_marginTop="2dp"
            android:text="我的履历"
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:background="#B7B7B7"
            android:layout_marginTop="2dp"
            android:text="我的履历"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

</LinearLayout>